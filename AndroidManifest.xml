<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wordwise"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:allowBackup="true">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.setting.ConfigurationWizardStep1"
            android:label="@string/title_configuration_step1" >
        </activity>
        <activity
            android:name=".activity.setting.ConfigurationWizardStep2"
            android:label="@string/title_configuration_step2" >
        </activity>
        <activity
            android:name=".activity.setting.Settings"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.MainGameScreen"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activity.NewGame"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.wordwise.activity.game.WordEvaluation"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.wordwise.activity.game.TranslationEvaluation"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>