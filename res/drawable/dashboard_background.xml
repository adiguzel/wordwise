<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

      
    <item>        
        <shape>
            <gradient
                android:endColor="#e0e0e0"
                android:startColor="#e0e0e0"
                android:angle="@integer/button_shape_gradient_angle_main" 
                />
            <corners
                android:radius="@dimen/button_shape_corner_radius" />
            <padding
                android:left="@dimen/background_shape_padding_left"
                android:top="@dimen/background_shape_padding_top"
                android:right="@dimen/background_shape_padding_right"
                android:bottom="@dimen/background_shape_padding_bottom" />
        </shape>
    </item>
</selector>