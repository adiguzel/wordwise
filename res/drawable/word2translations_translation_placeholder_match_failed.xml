<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
         android:angle="@integer/background_shape_gradient_angle_main"
        android:endColor="@color/wordwise_main_light_gray_end"
        android:startColor="@color/wordwise_main_light_gray_start" />

    <padding
        android:bottom="@dimen/background_shape_padding_bottom"
        android:left="@dimen/background_shape_padding_left"
        android:right="@dimen/background_shape_padding_right"
        android:top="@dimen/background_shape_padding_top" />

    <corners android:radius="@dimen/background_shape_corner_radius" />

    <stroke
        android:width="@dimen/background_shape_stroke_main"
        android:color="@color/wordwise_main_fail_red" />

</shape>