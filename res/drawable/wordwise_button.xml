<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#DD66a335"
                android:endColor="#DD66a335"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#DD66a335" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#DD66a335"
                android:startColor="#DD66a335"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#DD66a335" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#DD66a335"
                android:startColor="#FF66a335"
                android:angle="90" 
                />
            <stroke
                android:width="2dp"
                android:color="#FF7FC348" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>