<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="@dimen/wordwise_padding_main" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/wordwise_padding_main" >

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/wordwise_padding_main_half"
            android:text="@string/welcomeLabel"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_welcome_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/appName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/wordwise_padding_main"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:textSize="@dimen/text_size_welcome_app_name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/configurationInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/info_background"
            android:drawableLeft="@drawable/ic_action_about_dark"
            android:gravity="left"
            android:paddingBottom="@dimen/wordwise_padding_main"
            android:text="@string/configurationDefinition"
            android:textSize="@dimen/text_size_large" 
            android:paddingLeft="@dimen/wordwise_padding_main_half"
            android:paddingRight="@dimen/wordwise_padding_main_half"/>
    </LinearLayout>

    <Button
        android:id="@+id/next"
        style="@style/wordwiseButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="next"
        android:text="@string/getStarted"
        android:textAllCaps="true" />

</RelativeLayout>