<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/continueButton"
        android:layout_marginBottom="@dimen/word2translations_padding_main"
        android:layout_marginTop="@dimen/word2translations_padding_main" >

        <RelativeLayout
            android:id="@+id/grids"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.wordwise.view.ScrollableGridView
                android:id="@+id/gridViewLetters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/divider_color"
                android:gravity="center"
                android:horizontalSpacing="0dp"
                android:numColumns="8"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0dp" >
            </com.wordwise.view.ScrollableGridView>

            <com.wordwise.view.ScrollableGridView
                android:id="@+id/gridViewWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gridViewLetters"
                android:layout_marginTop="@dimen/word2translations_padding_main"
                android:numColumns="3" >
            </com.wordwise.view.ScrollableGridView>
        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/continueButton"
        style="@style/wordwiseButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:onClick="continueNextGame"
        android:text="@string/continueLabel" />

</RelativeLayout>