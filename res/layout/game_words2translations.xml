<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/hangman_main_vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/buttons"
        android:orientation="vertical"
        android:paddingBottom="@dimen/wordwise_padding_main"
        android:weightSum="5" >

        <TextView
            android:id="@+id/word2TranslationGameLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/word2Translations_game_information"
            android:textSize="@dimen/text_size_small" 
            android:paddingBottom="@dimen/wordwise_padding_main"/>

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/wordwise_padding_main">

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/word2translations_word_margin_bottom"
                    android:paddingTop="@dimen/word2translations_word_margin_top"
                    android:textAlignment="center" >

                    <com.wordwise.view.game.Word2TranslationsTextView
                        android:id="@+id/word1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/word2translations_word_margin_row"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.wordwise.view.game.Word2TranslationsTextView
                        android:id="@+id/translation1_placeholder"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/word2translations_word_margin_row"
                        android:layout_weight="0.5"
                        android:background="@drawable/word2translations_translation_placeholder_initial"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/word2translations_word_margin_bottom"
                    android:paddingTop="@dimen/word2translations_word_margin_top" >

                    <com.wordwise.view.game.Word2TranslationsTextView
                        android:id="@+id/word2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/word2translations_word_margin_row"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.wordwise.view.game.Word2TranslationsTextView
                        android:id="@+id/translation2_placeholder"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/word2translations_word_margin_row"
                        android:layout_weight="0.5"
                        android:background="@drawable/word2translations_translation_placeholder_initial"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/word2translations_word_margin_bottom"
                    android:paddingTop="@dimen/word2translations_word_margin_top" >

                    <com.wordwise.view.game.Word2TranslationsTextView
                        android:id="@+id/word3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/word2translations_word_margin_row"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.wordwise.view.game.Word2TranslationsTextView
                        android:id="@+id/translation3_placeholder"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/word2translations_word_margin_row"
                        android:layout_weight="0.5"
                        android:background="@drawable/word2translations_translation_placeholder_initial"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_color" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/word2translations_word_margin_bottom"
                    android:paddingTop="@dimen/word2translations_word_margin_top" >

                    <com.wordwise.view.game.Word2TranslationsTextView
                        android:id="@+id/word4"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/word2translations_word_margin_row"
                        android:layout_weight="0.5"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small"
                        android:textStyle="bold" />

                    <com.wordwise.view.game.Word2TranslationsTextView
                        android:id="@+id/translation4_placeholder"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/word2translations_word_margin_row"
                        android:layout_weight="0.5"
                        android:background="@drawable/word2translations_translation_placeholder_initial"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <TextView
            style="@style/wordwiseHeading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/word2translations_word_margin_row"
            android:gravity="center"
            android:text="@string/wordwise_translations_heading" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >

            <com.wordwise.view.ScrollableGridView
                android:id="@+id/translationsGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:horizontalSpacing="@dimen/word2translations_translations_grid_horizontal_spacing"
                android:numColumns="auto_fit"
                android:textSize="@dimen/text_size_small"
                android:verticalSpacing="@dimen/word2translations_translations_grid_vertical_spacing" >
            </com.wordwise.view.ScrollableGridView>
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/validateButton"
            style="@style/wordwiseButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:enabled="false"
            android:onClick="validate"
            android:text="@string/check" />

        <Button
            android:id="@+id/continueButton"
            style="@style/wordwiseButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:onClick="review"
            android:text="@string/review_game_label"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>