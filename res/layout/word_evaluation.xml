<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/word2translations_padding_main" >

    <include
        android:id="@+id/topBar"
        layout="@layout/game_top_bar" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rating"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        android:orientation="vertical"
        android:padding="10dip" >

        <TextView
            android:id="@+id/wordToEvaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dip"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/wordQualityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dip"
            android:text="@string/wordQualityText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RatingBar
            android:id="@+id/wordQualityRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="2"
            android:paddingTop="10dip"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/wordDifficultyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dip"
            android:text="@string/wordDifficultyText"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RatingBar
            android:id="@+id/wordDifficultyRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="3"
            android:paddingTop="10dip"
            android:stepSize="1.0" />
    </LinearLayout>

    <Button
        android:id="@+id/submitTranslation"
        style="@style/wordwiseButtonStyle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:enabled="false"
        android:onClick="submitEvaluation"
        android:text="@string/translate_word_submit_translation_button" />

</RelativeLayout>