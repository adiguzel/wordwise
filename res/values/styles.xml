<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="wordwiseButtonMainStyle">
        <item name="android:textColor">@color/wordwise_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/button_text_padding_left</item>
        <item name="android:paddingRight">@dimen/button_text_padding_right</item>
        <item name="android:paddingBottom">@dimen/button_text_padding_bottom</item>
        <item name="android:paddingTop">@dimen/button_text_padding_top</item>
    </style>

    <style name="wordwiseButtonStyle" parent="wordwiseButtonMainStyle">
        <item name="android:background">@drawable/wordwise_button</item>
    </style>

    <style name="wordwiseBackButtonStyle" parent="wordwiseButtonStyle">
        <item name="android:background">@drawable/wordwise_back_button</item>
    </style>

    <style name="wordwiseSmallButtonStyle">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="wordwiseSmallLightButtonStyle" parent="wordwiseSmallButtonStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/light_button</item>
    </style>

    <style name="wordwiseSmallLightBoldButtonStyle" parent="wordwiseSmallLightButtonStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="wordwiseHeading">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/wordwise_main_gray_dark_start</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/wordwise_heading</item>
        <item name="android:paddingLeft">@dimen/wordwise_heading_side_padding</item>
        <item name="android:paddingRight">@dimen/wordwise_heading_side_padding</item>
        <item name="android:layout_marginTop">@dimen/word2translations_padding_main</item>
    </style>

</resources>